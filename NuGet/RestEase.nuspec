<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/10/nuspec.xsd">
  <metadata>
    <id>RestEase</id>
    <version>0.0.0</version>
    <title>RestEase</title>
    <authors>Antony Male</authors>
    <owners>Antony Male</owners>
    <licenseUrl>http://github.com/canton7/RestEase/blob/master/LICENSE.txt</licenseUrl>
    <projectUrl>http://github.com/canton7/RestEase</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Simple but powerful REST library for .NET, inspired by Refit</description>
    <copyright>Copyright 2015 Antony Male</copyright>
    <tags>REST JSON</tags>
    <iconUrl>https://raw.githubusercontent.com/canton7/RestEase/master/icon.png</iconUrl>

    <dependencies>
      <!-- If we don't specify a net45 group, nuget will install the net40 group even on net45 -->

      <group targetFramework="net45">
        <dependency id="Newtonsoft.Json" version="6.0.5"/>
      </group>

      <group targetFramework="net40">
        <dependency id="Newtonsoft.Json" version="6.0.5"/>
        <dependency id="Microsoft.Bcl.Async" version="1.0.168"/>
        <dependency id="Microsoft.Net.Http" version="2.2.29"/>
      </group>
    </dependencies>
  </metadata>

  <files>
    <file src="..\bin\net45\Release\RestEase.dll" target="lib\net45"/>
    <file src="..\bin\net45\Release\RestEase.pdb" target="lib\net45"/>
    <file src="..\bin\net45\Release\RestEase.xml" target="lib\net45"/>
    <file src="..\bin\net45\Release\RestEase.pdb.srcsrv" target="lib\net45"/>

    <file src="..\bin\net40\Release\RestEase.dll" target="lib\net40"/>
    <file src="..\bin\net40\Release\RestEase.pdb" target="lib\net40"/>
    <file src="..\bin\net40\Release\RestEase.xml" target="lib\net40"/>
    <file src="..\bin\net40\Release\RestEase.pdb.srcsrv" target="lib\net40"/>
  </files>
</package>
